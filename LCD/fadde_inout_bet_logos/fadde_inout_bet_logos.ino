// --- Brightness Pulse Function ---
// Smoothly increases brightness (contrast) from minContrast to maxContrast and back,
// repeating for a given number of cycles with a small delay between steps.
void pulseBrightness(uint8_t minContrast, uint8_t maxContrast, int cycles, int stepDelay) {
  for (int i = 0; i < cycles; i++) {
    // Fade in: from minContrast to maxContrast
    for (uint8_t c = minContrast; c <= maxContrast; c += 5) {
      display.setMyContrast(c);
      display.display();
      delay(stepDelay);
    }
    // Fade out: from maxContrast to minContrast
    for (int c = maxContrast; c >= minContrast; c -= 5) {
      display.setMyContrast(c);
      display.display();
      delay(stepDelay);
    }
  }
  // Restore full brightness at end.
  display.setMyContrast(maxContrast);
  display.display();
}

