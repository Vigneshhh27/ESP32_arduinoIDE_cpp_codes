  display.setCursor(cursorX, 0);
  display.print(F("Temperature"));
  
  // Draw the fire bitmap covering the whole screen starting at (0,0)
  //display.drawBitmap(0, 0, firebitmapfir, SCREEN_WIDTH, SCREEN_HEIGHT, SSD1306_WHITE);
 // display.drawBitmap(0, 0, thermometerthermometer, SCREEN_WIDTH, SCREEN_HEIGHT, SSD1306_WHITE);
  display.drawBitmap(0, 0, thermometerthermometerthermo3, SCREEN_WIDTH, SCREEN_HEIGHT, SSD1306_WHITE);

  
   // Now display a two-digit temperature (with °C) on the right half.
  // We'll use textSize 3 so that the characters are large.
  display.setTextSize(3);
  display.setTextColor(SSD1306_WHITE);
  // Calculate vertical centering. Default font is ~8 pixels tall; with textSize 3: 8*3=24 pixels tall.
  int textY =   26; //(SCREEN_HEIGHT - 24) / 2;  // (64-24)/2 = 20
  // Place the text in the right half (starting a few pixels after column 64).
  display.setCursor(51, textY);
  display.print(temperature);

  // Using CP437, character code 223 often renders as a degree symbol.
  //display.write(223);
  int degreeX = 51 + 32 + 3 + 6;  // shift right by an offset
  int degreeY = textY - 3;      // position slightly above the text baseline
  
  // Draw a filled circle to represent the degree symbol
  display.fillCircle(degreeX, degreeY, 2, SSD1306_WHITE);
  // Now print "C" after the circle.
  // Add additional offset (e.g., 6 pixels) so that there's a gap of 3-4 pixels between circle and "C".
  display.setCursor(degreeX + 6, textY);
  display.print("C");
  
  display.display();
  delay(5000);  // Hold slide 1 for 5 seconds
}

